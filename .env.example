# Kiosk Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Required: Kiosk user password (used for login and VNC)
KIOSK_PASSWORD=your_secure_password_here

# Optional: Home Assistant URL (defaults to http://192.168.1.5:8123/lovelace/0)
KIOSK_URL=http://192.168.1.5:8123/lovelace/0

# Optional: Home Assistant IP for network checks (defaults to 192.168.1.5)
HOME_ASSISTANT_IP=192.168.1.5

# Optional: Keyboard layout code (defaults to 'be' for Belgian French)
# Common layouts: us, uk, fr, de, es, it, nl, be, etc.
KEYBOARD_LAYOUT=be

# Optional: WiFi credentials (leave as YOUR_WIFI_SSID to skip WiFi setup)
WIFI_SSID=your_wifi_network_name
WIFI_PASSWORD=your_wifi_password

# Optional: GitHub runner configuration (leave empty to skip runner setup)
GITHUB_RUNNER_TOKEN=
GITHUB_REPO=
